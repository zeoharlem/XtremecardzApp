<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Xtremecardz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@android:color/black</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:navigationBarColor">@color/black</item>

        <!--        <item name="android:windowTranslucentStatus">true</item>-->


        <!-- Customize your theme here. -->
    </style>

    <style name="toolbarWhiteIcon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="OutlinedRoundedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="android:textColorHint">@color/purple_500</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="android:textColorHint">@color/purple_500</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="backgroundColor">@color/dark</item>
    </style>

    <style name="Theme.Xtremecardz.TransparentStatus" parent="Theme.Xtremecardz">
