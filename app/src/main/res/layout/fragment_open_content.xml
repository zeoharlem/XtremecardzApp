<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/_30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitoblack"
        android:text="John D. Phillips"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

    <TextView
        android:id="@+id/designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:fontFamily="@font/nunitosemibold"
        android:text="Software Engineer"
        android:textColor="@color/grey_light"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullname" />

    <TextView
        android:id="@+id/company_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:fontFamily="@font/nunitoregular"
        android:text="Software Engineer"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/designation" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/share_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/company_address">


        <ImageButton
            android:id="@+id/share_button1"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:background="@drawable/round_circle"
            android:fontFamily="@font/montserratblack"
            android:src="@drawable/whatsapp"
            android:layout_marginStart="@dimen/_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@color/dark"
            app:layout_constraintEnd_toStartOf="@+id/share_pro_button"
            app:tint="@color/grey" />


        <Button
            android:id="@+id/share_pro_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratblack"
            android:gravity="center"
            android:paddingStart="@dimen/_30dp"
            android:paddingEnd="@dimen/_30dp"
            android:text="Reach out to us"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:letterSpacing="0.04"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/share_button"
            app:layout_constraintStart_toEndOf="@id/share_button1" />

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:background="@drawable/round_circle"
            android:backgroundTint="@color/dark"
            android:fontFamily="@font/montserratblack"
            android:src="@drawable/ic_outline_share_24"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/share_pro_button"
            app:tint="@color/grey" />

        <!--        <ImageButton-->
        <!--            android:id="@+id/edit_button"-->
        <!--            android:layout_width="@dimen/_50dp"-->
        <!--            android:layout_height="@dimen/_50dp"-->
        <!--            android:background="@drawable/round_circle"-->
        <!--            android:fontFamily="@font/montserratblack"-->
        <!--            android:src="@drawable/ic_round_edit_24"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toStartOf="@+id/share_pro_button"-->
        <!--            app:layout_constraintStart_toStartOf="parent" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/counter_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="@dimen/_15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_container">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitoblack"
                android:text="Card Type"
                android:textColor="@color/grey_light"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitomedium"
                android:text="Design &amp; Print"
                android:textColor="@color/grey"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@color/grey" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_number_requested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratextrabold"
                android:text="20K"
                android:textColor="@color/grey_light"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitoblack"
                android:text="No of Card(s)"
                android:textColor="@color/grey"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10dp"
        android:background="@color/dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counter_container" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_10dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <LinearLayout
            android:id="@+id/other_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:drawablePadding="@dimen/_20dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="Xtremecardz"
                android:textSize="15sp"
                android:textColor="@color/grey"
                app:drawableStartCompat="@drawable/ic_outline_location_on_24"
                app:drawableTint="@color/grey" />

            <TextView
                android:id="@+id/website_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:drawablePadding="@dimen/_20dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="Xtremecardz.com"
                android:textSize="15sp"
                android:textColor="@color/grey"
                app:drawableStartCompat="@drawable/ic_baseline_send_24"
                app:drawableTint="@color/grey" />

            <TextView
                android:id="@+id/designation_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:drawablePadding="@dimen/_20dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="Software Engineer"
                android:textSize="15sp"
                android:textColor="@color/grey"
                app:drawableStartCompat="@drawable/ic_round_verified_user_24"
                app:drawableTint="@color/grey" />

            <TextView
                android:id="@+id/company_address_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:drawablePadding="@dimen/_20dp"
                android:fontFamily="@font/nunitosemibold"
                android:lineSpacingExtra="@dimen/_5dp"
                android:text="Block 3c, 3rd avenue, CityView Estate, OgunState"
                android:textSize="15sp"
                android:textColor="@color/grey"
                app:drawableStartCompat="@drawable/ic_baseline_map_24"
                app:drawableTint="@color/grey" />

            <TextView
                android:id="@+id/back_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:drawablePadding="@dimen/_20dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="Back Content Description"
                android:textSize="15sp"
                android:textColor="@color/grey"
                app:drawableStartCompat="@drawable/ic_round_add_24"
                app:drawableTint="@color/grey" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>